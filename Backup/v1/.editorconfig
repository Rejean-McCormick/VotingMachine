# 07 - .editorconfig â€” VM-ENGINE v0
# Consistent editor behavior aligned with canonical LF/UTF-8 rules.

root = true

# --- Defaults (most files) ---
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# --- Rust ---
[*.rs]
indent_style = space
indent_size = 4

# --- TOML / YAML / JSON ---
[*.toml]
indent_style = space
indent_size = 2

[*.yml]
indent_style = space
indent_size = 2

[*.yaml]
indent_style = space
indent_size = 2

[*.json]
indent_style = space
indent_size = 2

# --- Markdown / Text (preserve hard line breaks) ---
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

[*.txt]
trim_trailing_whitespace = false

# --- Makefiles (tabs are syntax) ---
[Makefile]
indent_style = tab

# --- Web UI / Reports ---
[*.html]
indent_style = space
indent_size = 2

[*.css]
indent_style = space
indent_size = 2

[*.js]
indent_style = space
indent_size = 2

[*.ts]
indent_style = space
indent_size = 2

[*.tsx]
indent_style = space
indent_size = 2

# --- Shell / PowerShell ---
[*.sh]
indent_style = space
indent_size = 2

[*.ps1]
indent_style = space
indent_size = 2
